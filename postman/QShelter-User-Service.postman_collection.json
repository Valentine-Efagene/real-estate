{
    "info": {
        "_postman_id": "qshelter-user-service-v1",
        "name": "QShelter User Service - E2E Scenario",
        "description": "Focused collection for user-service: tenant bootstrap, admin login, user registration, get user, invite user. Use these to build a Postman flow for the Chidi scenario.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "userServiceUrl",
            "value": "http://localhost:3002",
            "type": "string"
        },
        {
            "key": "bootstrapSecret",
            "value": "local-bootstrap-secret",
            "type": "string"
        },
        {
            "key": "tenantId",
            "value": "",
            "type": "string"
        },
        {
            "key": "adaezeId",
            "value": "",
            "type": "string"
        },
        {
            "key": "adaezeAccessToken",
            "value": "",
            "type": "string"
        },
        {
            "key": "chidiId",
            "value": "",
            "type": "string"
        },
        {
            "key": "chidiAccessToken",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "1 - Bootstrap Tenant",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "x-bootstrap-secret",
                        "value": "{{bootstrapSecret}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"tenant\": {\n    \"name\": \"QShelter Real Estate\",\n    \"subdomain\": \"qshelter\"\n  },\n  \"admin\": {\n    \"email\": \"adaeze@qshelter.com\",\n    \"password\": \"SecureAdmin123!\",\n    \"firstName\": \"Adaeze\",\n    \"lastName\": \"Okonkwo\"\n  }\n}"
                },
                "url": {
                    "raw": "{{userServiceUrl}}/admin/bootstrap-tenant",
                    "host": [
                        "{{userServiceUrl}}"
                    ],
                    "path": [
                        "admin",
                        "bootstrap-tenant"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "const res = pm.response.json();",
                            "if (res.success && res.data) {",
                            "  pm.collectionVariables.set('tenantId', res.data.tenant.id);",
                            "  pm.collectionVariables.set('adaezeId', res.data.admin.id);",
                            "  pm.test('Tenant and admin returned', () => { pm.expect(res.data.tenant.id).to.be.a('string'); });",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "2 - Admin Login",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"adaeze@qshelter.com\",\n  \"password\": \"SecureAdmin123!\"\n}"
                },
                "url": {
                    "raw": "{{userServiceUrl}}/auth/login",
                    "host": [
                        "{{userServiceUrl}}"
                    ],
                    "path": [
                        "auth",
                        "login"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "const res = pm.response.json();",
                            "if (res.success && res.data && res.data.accessToken) {",
                            "  pm.collectionVariables.set('adaezeAccessToken', res.data.accessToken);",
                            "  pm.test('Got admin token', () => { pm.expect(res.data.accessToken).to.be.a('string'); });",
                            "} else {",
                            "  pm.test('Login response has token (adjust path to your API)', () => { pm.expect(true).to.be.ok; });",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "3 - Register Customer (Chidi)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"efagenevalentine@gmail.com\",\n  \"password\": \"CustomerPass123!\",\n  \"firstName\": \"Chidi\",\n  \"lastName\": \"Nnamdi\"\n}"
                },
                "url": {
                    "raw": "{{userServiceUrl}}/auth/register",
                    "host": [
                        "{{userServiceUrl}}"
                    ],
                    "path": [
                        "auth",
                        "register"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "const res = pm.response.json();",
                            "if (res.success && res.data) {",
                            "  pm.collectionVariables.set('chidiId', res.data.id || res.data.user?.id || '');",
                            "  pm.collectionVariables.set('chidiAccessToken', res.data.accessToken || '');",
                            "  pm.test('Customer created', () => { pm.expect(res.success).to.equal(true); });",
                            "}"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        },
        {
            "name": "4 - Get User (admin token)",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adaezeAccessToken}}"
                    }
                ],
                "url": {
                    "raw": "{{userServiceUrl}}/users/{{chidiId}}",
                    "host": [
                        "{{userServiceUrl}}"
                    ],
                    "path": [
                        "users",
                        "{{chidiId}}"
                    ]
                }
            }
        },
        {
            "name": "5 - Invite User (example)",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    },
                    {
                        "key": "Authorization",
                        "value": "Bearer {{adaezeAccessToken}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\n  \"email\": \"partner@example.com\",\n  \"firstName\": \"Partner\",\n  \"lastName\": \"User\",\n  \"roles\": [\"TENANT_ADMIN\"]\n}"
                },
                "url": {
                    "raw": "{{userServiceUrl}}/users/invite",
                    "host": [
                        "{{userServiceUrl}}"
                    ],
                    "path": [
                        "users",
                        "invite"
                    ]
                }
            },
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Invite request sent', () => { pm.expect(pm.response.code).to.be.oneOf([200,201]); });"
                        ],
                        "type": "text/javascript"
                    }
                }
            ]
        }
    ]
}