{
    "name": "@real-estate/monorepo",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "build:shared": "pnpm --filter './shared/**' run build",
        "build:services": "pnpm --filter './services/**' run build",
        "build:all": "pnpm run build:shared && pnpm run build:services",
        "install:all": "pnpm install -r",
        "local:start": "bash local-dev/scripts/start.sh",
        "local:stop": "bash local-dev/scripts/stop.sh",
        "local:reset": "bash local-dev/scripts/reset.sh",
        "local:logs": "bash local-dev/scripts/logs.sh",
        "local:migrate": "bash local-dev/scripts/migrate.sh",
        "local:seed": "bash local-dev/scripts/seed.sh",
        "test:e2e": "pnpm local:start && pnpm local:migrate && pnpm --filter './services/**' run test:e2e",
        "test:e2e:mortgage": "pnpm --filter mortgage-service run test:e2e",
        "test:e2e:user": "pnpm --filter user-service-v2 run test:e2e"
    },
    "devDependencies": {},
    "engines": {
        "node": ">=20.0.0",
        "pnpm": ">=8.0.0"
    }
}