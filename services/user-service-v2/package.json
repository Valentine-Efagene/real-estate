{
  "name": "user-service-v2",
  "version": "1.0.0",
  "description": "Lightweight User Authentication Service for AWS Lambda",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/local.ts",
    "start:dev": "NODE_ENV=local tsx src/local.ts",
    "start": "NODE_ENV=local npm run build && node dist/index.js",
    "build": "tsc && node esbuild.config.js",
    "deploy:dev": "npm run build && npx sls deploy --stage dev",
    "test": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js",
    "test:e2e": "NODE_ENV=local NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest --config jest.e2e.config.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:seed:local": "NODE_ENV=local tsx src/lib/db/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:reset:local": "NODE_ENV=local prisma migrate reset --force",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:push:local": "NODE_ENV=local prisma db push"
  },
  "dependencies": {
    "@aws-lambda-powertools/logger": "^2.11.0",
    "@aws-sdk/client-secrets-manager": "^3.709.0",
    "@aws-sdk/client-ssm": "^3.958.0",
    "@codegenie/serverless-express": "^4.14.1",
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.0.0",
    "@valentine-efagene/qshelter-common": "^2.0.15",
    "bcrypt": "^5.1.1",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "prisma": "^7.2.0",
    "serverless": "^4.9.0",
    "serverless-offline": "^14.4.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}