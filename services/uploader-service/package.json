{
    "name": "uploader-service",
    "version": "1.0.0",
    "description": "File upload service with presigned S3 URLs",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "type": "module",
    "scripts": {
        "build": "tsc && node esbuild.config.js",
        "deploy:dev": "npm run build && npx sls deploy --stage dev",
        "deploy:staging": "npm run build && npx sls deploy --stage staging",
        "deploy:prod": "npm run build && npx sls deploy --stage prod",
        "deploy": "npm run deploy:dev",
        "format": "prettier --write \"src/**/*.ts\"",
        "start": "npm run build && node dist/local.mjs",
        "deploy:localstack": "npm run build && npx sls deploy --stage localstack --config serverless.localstack.yml && ../../local-dev/scripts/fix-apigw-stage.sh",
        "start:dev": "npm run start",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix"
    },
    "dependencies": {
        "@asteasolutions/zod-to-openapi": "^8.2.0",
        "@aws-sdk/client-s3": "^3.700.0",
        "@aws-sdk/lib-storage": "^3.700.0",
        "@aws-sdk/s3-presigned-post": "^3.700.0",
        "@aws-sdk/s3-request-presigner": "^3.700.0",
        "@codegenie/serverless-express": "^4.14.1",
        "@valentine-efagene/qshelter-common": "^2.0.204",
        "archiver": "^7.0.1",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "mime-types": "^2.1.35",
        "uuid": "^13.0.0",
        "zod": "^4.0.0"
    },
    "devDependencies": {
        "@types/archiver": "^6.0.3",
        "@types/aws-lambda": "^8.10.141",
        "@types/express": "^4.17.17",
        "@types/mime-types": "^2.1.4",
        "@types/node": "^20.3.1",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "esbuild": "^0.24.2",
        "eslint": "^8.42.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "prettier": "^3.0.0",
        "serverless": "^4.9.0",
        "serverless-localstack": "^1.2.0",
        "typescript": "^5.1.3"
    }
}
