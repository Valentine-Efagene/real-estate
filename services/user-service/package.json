{
  "name": "user-service-v2",
  "version": "1.0.0",
  "description": "Lightweight User Authentication Service for AWS Lambda",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/local.ts",
    "start:dev": "tsx src/local.ts",
    "start": "npm run build && node dist/index.js",
    "build": "tsc && node esbuild.config.js",
    "deploy:dev": "npm run build && npx sls deploy --stage dev",
    "build:offline": "tsc && node esbuild.config.js",
    "deploy:localstack": "npm run build && npx sls deploy --stage localstack --config serverless.localstack.yml && ../../local-dev/scripts/fix-apigw-stage.sh",
    "test": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js",
    "test:e2e": "NODE_ENV=localstack NODE_OPTIONS='--experimental-vm-modules --no-warnings=ExperimentalWarning' jest --config jest.e2e.config.js",
    "prisma:generate": "prisma generate --schema=../../shared/common/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=../../shared/common/prisma/schema.prisma",
    "db:seed": "tsx src/lib/db/seed.ts",
    "db:seed:localstack": "NODE_ENV=localstack tsx src/lib/db/seed.ts",
    "db:reset": "prisma migrate reset --force --schema=../../shared/common/prisma/schema.prisma",
    "db:reset:localstack": "NODE_ENV=localstack prisma migrate reset --force --schema=../../shared/common/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=../../shared/common/prisma/schema.prisma",
    "db:push": "prisma db push --schema=../../shared/common/prisma/schema.prisma",
    "db:push:localstack": "NODE_ENV=localstack prisma db push --schema=../../shared/common/prisma/schema.prisma"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.2.0",
    "@aws-lambda-powertools/logger": "^2.11.0",
    "@aws-sdk/client-lambda": "^3.988.0",
    "@aws-sdk/client-secrets-manager": "^3.709.0",
    "@aws-sdk/client-ssm": "^3.958.0",
    "@codegenie/serverless-express": "^4.14.1",
    "@prisma/adapter-mariadb": "^7.2.0",
    "@prisma/client": "^7.0.0",
    "@valentine-efagene/qshelter-common": "^2.0.189",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "google-auth-library": "^9.15.1",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/express-serve-static-core": "^5.1.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "esbuild": "^0.24.2",
    "jest": "^29.7.0",
    "prisma": "^7.2.0",
    "serverless": "^4.9.0",
    "serverless-localstack": "^1.2.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
