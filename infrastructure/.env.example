# Infrastructure Stack Environment Variables
# Copy this file to .env and fill in the values
# These values are used when deploying the CDK stack

# Stage (dev, staging, prod)
STAGE=dev

# HTTP API Gateway ID (set after first deployment)
HTTP_API_ID=REPLACE_ME

# =============================================================================
# JWT & Encryption (auto-generated if not provided)
# =============================================================================
ACCESS_TOKEN_SECRET=
REFRESH_TOKEN_SECRET=
ENCRYPTION_PASSWORD=
ENCRYPTION_SALT=

# =============================================================================
# OAuth Providers
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.qshelter.ng/auth/google/callback

# =============================================================================
# Payment Gateway
# =============================================================================
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_BASE_URL=https://api.paystack.co

# =============================================================================
# Notification Service - Office365
# =============================================================================
OFFICE365_CLIENT_ID=
OFFICE365_CLIENT_SECRET=
OFFICE365_TENANT_ID=
OFFICE365_SENDER_EMAIL=info@qshelter.ng

# =============================================================================
# Notification Service - SMTP
# =============================================================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_ENCRYPTION=STARTTLS

# =============================================================================
# Notification Service - AWS Services
# For production, create an IAM user with SNS/SQS permissions
# =============================================================================
NOTIFICATION_AWS_ACCESS_KEY_ID=
NOTIFICATION_AWS_SECRET_ACCESS_KEY=
SQS_URL=
PLATFORM_APPLICATION_ARN=
