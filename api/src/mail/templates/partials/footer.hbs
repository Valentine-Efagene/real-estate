<tr>
  <td style="background-color: #252525; padding: 1rem 5%;">
    <table style="width: 100%; text-align: center; background-color: #252525;">
      <tr>
        <td>
          {{#each socialLinks}}
          <a href="{{this.link}}" target="_blank" style="margin: 0 4px; display: inline-block;">
            <img src="{{this.icon}}" alt="{{this.name}}" width="20" style="background: #018F3B14; border-radius: 50%; padding: 3px;" />
          </a>
          {{/each}}
        </td>
      </tr>
      <tr>
        <td class="footer-text">
          <strong>Lagos Office:</strong> {{firstOfficeAddress}}
        </td>
      </tr>
      <tr>
        <td class="footer-text">
          <strong>Abuja Office:</strong> {{secondOfficeAddress}}
        </td>
      </tr>
      <tr>
        <td class="footer-text">
          <a href="tel:{{firstPhoneNumber}}" style="color: #ffffff;">{{firstPhoneNumber}}</a> |
          <a href="tel:{{secondPhoneNumber}}" style="color: #ffffff;">{{secondPhoneNumber}}</a>
        </td>
      </tr>
      <tr>
        <td class="footer-text">
          <a href="mailto:{{secondEmail}}" style="color: #ffffff;">{{secondEmail}}</a> |
          <a href="{{appLink}}" style="color: #ffffff;">{{appLink}}</a>
        </td>
      </tr>
      <tr>
        <td class="footer-text">Â© 2025 MediaCraft. All rights reserved.</td>
      </tr>
      <tr>
        <td class="footer-text">
          <a href="{{unsubscribeLink}}" style="color: #ffffff; font-size: 12px;">Unsubscribe</a>
        </td>
      </tr>
      <tr>
        <td class="footer-text">Powered by</td>
      </tr>
      <tr>
        <td style="text-align: center;">
          <a href="{{appLink}}">
            <img src="{{appLogo}}" alt="MediaCraft Logo" width="100" style="margin: 0.5rem auto;" />
          </a>
        </td>
      </tr>
    </table>
  </td>
