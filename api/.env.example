# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=mysql
DB_NAME=mediacraft
DB_PORT=3306
DB_USERNAME=mediacraft_user
DB_PASSWORD=your_secure_password_here

# Authentication
JWT_SECRET=your_jwt_secret_here_make_it_long_and_secure
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_make_it_long_and_secure

# Encryption
ENCRYPTION_PASSWORD=your_encryption_password_here
ENCRYPTION_SALT=your_encryption_salt_here

# AWS S3 Configuration
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_ACCESS_KEY_ID=your-aws-access-key-id
AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_S3_REGION=us-east-1

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USERNAME=
REDIS_PASSWORD=

# Email Configuration (if using SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASS=your-email-password
MAIL_FROM=noreply@mediacraft.com

# Google OAuth (if using)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Paystack (if using for payments)
PAYSTACK_SECRET_KEY=your-paystack-secret-key
PAYSTACK_PUBLIC_KEY=your-paystack-public-key